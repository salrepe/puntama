.row
  .col-lg-12
    %h1.page-header
      = I18n.t('admin.products.title')
.row
  .table-responsive
    %table.table.table-bordered.table-hover.table-striped
      %thead
        %tr
          %th= I18n.t('admin.products.name')
          %th= I18n.t('admin.products.price')
          %th= I18n.t('admin.products.action')
      %tbody
        - @products.each do |product|
          %tr
            %td= product.name
            %td= product.price
            %td
              %a{href: "#{product.id}/edit", id: "edit_#{product.id}"}
                = I18n.t('admin.products.edit')
